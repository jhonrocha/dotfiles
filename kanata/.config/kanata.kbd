;; vim: ft=lisp
(defcfg
  process-unmapped-keys yes
  concurrent-tap-hold yes
)

(defsrc
  fn f1   f2   f3   f4   f5   f6   f7   f8   f9   f10  f11  f12 bspc
  ◀ ▲ ▼ ▶  
  caps 
  ; 
  rmeta 
  ralt
)
(defvar
  tap-time 200
  hold-time 150
)

(defalias
  fn (tap-hold 250 250 fn (layer-toggle fn))
  caps esc 
  rmeta (tap-hold $tap-time $hold-time rmeta (multi rmeta lalt))
  ; (tap-hold $tap-time $hold-time ; rctl)
)

(deflayer base
  @fn 🔅    🔆    mctl  sls   dtn   dnd   ◀◀    ▶⏸    ▶▶    🔇    🔉    🔊  bspc
  ◀ ▲ ▼ ▶  
  @caps
  @;
  @rmeta
  lalt
)

(deflayer fn
  fn f1    f2    f3    f4    f5    f6    f7    f8    f9    f10   f11   f12 del
  ⤒ ⇞ ⇟ ⤓
  lrld ;; caps
  _ ;; ;
  _ ;; rmet
  _ ;; lalt
)
