;; vim: ft=lisp
;; Basic home row mods example using QWERTY
;; For a more complex but perhaps usable configuration,
;; see home-row-mod-advanced.kbd

(defcfg
  process-unmapped-keys yes
  concurrent-tap-hold yes
)

(defsrc
  esc  f1   f2   f3   f4   f5   f6   f7   f8   f9   f10  f11  f12
  caps 
  ; 
  tab
  rmeta 
  ralt
  '
)
(defvar
  ;; Note: consider using different time values for your different fingers.
  ;; For example, your pinkies might be slower to release keys and index
  ;; fingers faster.
  tap-time 200
  hold-time 150
)
(defalias
  caps esc 
  rmeta (tap-hold $tap-time $hold-time rmeta (multi rmeta lalt))
  esc (tap-hold $tap-time $hold-time esc (multi rmeta lalt))
  ; (tap-hold $tap-time $hold-time ; rctl)
  ' (tap-hold $tap-time $hold-time ' lalt)
)

(deflayer base
  @esc  🔅   🔆    ✗    ✗    ✗    ✗    ◀◀   ▶⏸   ▶▶   🔇   🔉   🔊
  @caps
  @;
  tab
  @rmeta
  lalt
  @'
)

(defchordsv2
  (. /) lrld 100 first-release ()
)
