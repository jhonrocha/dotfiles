# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 80

[*.md]
trim_trailing_whitespace = false

# 4 spaces
[*.{el,css,rs,py,java,hbs,html}]
indent_size = 4
indent_style = space


[Makefile]
indent_style = tab
