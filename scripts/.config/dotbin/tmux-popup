#!/usr/bin/env bash

session=$1
window=$2
path=$3

if [[ $session = "debug" ]]; then
  tmux detach-client
else
  tmux popup -E -xC -yC -w 90% -h 70% "(tmux attach -t debug:$window &>/dev/null) || (tmux new-window -t debug: -n $window -c $path &>/dev/null && tmux attach -t debug:$window &>/dev/null) || (tmux new-session -s debug -n $window -c $path &>/dev/null)"
fi
